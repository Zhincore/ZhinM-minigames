{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~common/*": [
        "common/*"
      ]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": true
  }
}
